<tr
  class={{if @isSelected "document-list-item-selected" "document-list-item"}}
  data-test-document-list-item
  role="button"
  {{on "click" (fn @onClickDocument @document)}}
>
  <td>
    <FaIcon
      @icon="file-alt"
      @prefix="far"
      @size="1x"
      data-test-file-icon
      {{set-style color=@document.category.color}}
    />
  </td>
  <td>
    {{@document.title}}
  </td>
  <td>
    {{t
      "alexandria.document-details.created-at"
      date=(format-date @document.createdAt)
    }}
  </td>
  <td>
    {{@document.createdByGroup}}
  </td>
</tr>