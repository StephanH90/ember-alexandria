<ul class="document-list">
    <li class="document-list-header">
      <span>Icon</span>
      <span>Title</span>
      <span>Created</span>
      <span>Group</span>
    </li>
  {{#each @fetchedDocuments as |document|}}
    <li>
      <span class="list-item-icon">
        <FaIcon
          @icon="file-alt"
          @prefix="far"
          @size="1x"
          data-test-file-icon
          {{set-style color=document.category.color}}
        />
      </span>
      <span class="list-item-title">{{document.title}}</span>
      <span class="list-item-created">
        {{t
          "alexandria.document-details.created-at"
          date=(format-date document.createdAt)
        }}
      </span>
      <span class="list-item-group">{{document.createdByGroup}}</span>
    </li>
  {{/each}}
</ul>
